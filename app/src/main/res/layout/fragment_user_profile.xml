<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Views.Fragments.UserProfile"
    android:id="@+id/userProfFragment"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="221dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/primary_bg"
            android:elevation="15dp">


            <LinearLayout
                android:id="@+id/userImgContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="@id/constraintLayout"
                app:layout_constraintHorizontal_bias="0.09"
                app:layout_constraintStart_toStartOf="@id/constraintLayout"
                app:layout_constraintTop_toTopOf="@id/constraintLayout">

                <ImageView
                    android:id="@+id/profileImg"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/user_circle"
                    android:src="@drawable/profile"
                    tools:layout_editor_absoluteX="20dp"
                    tools:layout_editor_absoluteY="105dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/userDetailsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="@id/constraintLayout"
                app:layout_constraintHorizontal_bias=".07"
                app:layout_constraintStart_toEndOf="@id/userImgContainer"
                app:layout_constraintTop_toTopOf="@id/constraintLayout">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="David wall"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/userEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="david@gmail.com"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        tools:ignore="ScrollViewCount"
        android:translationY="-115dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Settings Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="385dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center">

                <!--    Upper Menus Container-->
                <LinearLayout
                    android:id="@+id/settingMenus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ProfileContainer"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true">

                            <ImageView
                                android:id="@+id/ProfileIcon"
                                android:layout_width="29dp"
                                android:layout_height="29dp"
                                android:src="@drawable/registration"
                                android:background="@drawable/user_circle"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_weight="1"
                                android:id="@+id/ProfileText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Profile"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/black"
                                android:layout_gravity="center"/>

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@drawable/black_chevron_forward_24"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/accountContainerr"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true">

                            <ImageView
                                android:id="@+id/accountIcon"
                                android:layout_width="29dp"
                                android:layout_height="29dp"
                                android:src="@drawable/registration"
                                android:background="@drawable/user_circle"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_weight="1"
                                android:id="@+id/accountText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Accounts"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/black"
                                android:layout_gravity="center"/>

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@drawable/black_chevron_forward_24"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/categoryContainer"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true">

                            <ImageView
                                android:id="@+id/categoryIcon"
                                android:layout_width="29dp"
                                android:layout_height="29dp"
                                android:src="@drawable/gridview"
                                android:background="@drawable/user_circle"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/categoryText"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Category Settings"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/black"
                                android:layout_gravity="center"/>


                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@drawable/black_chevron_forward_24"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/currencyContainer"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true">

                            <ImageView
                                android:id="@+id/currencyIcon"
                                android:layout_width="25dp"
                                android:layout_height="29dp"
                                android:layout_gravity="center"
                                android:background="@drawable/user_circle"
                                android:src="@drawable/note" />

                            <TextView
                                android:id="@+id/currencyChange"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Currency Change"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:layout_weight="1"/>

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@drawable/black_chevron_forward_24"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/notificationContainer"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true">

                            <ImageView
                                android:id="@+id/notificationIcon"
                                android:layout_width="29dp"
                                android:layout_height="29dp"
                                android:src="@drawable/bell"
                                android:background="@drawable/user_circle"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/notificationText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Notification"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:layout_weight="1"/>

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@drawable/black_chevron_forward_24"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/reminderContainer"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true">

                            <ImageView
                                android:id="@+id/reminderIcon"
                                android:layout_width="29dp"
                                android:layout_height="29dp"
                                android:src="@drawable/alarm_clock"
                                android:background="@drawable/user_circle"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/remindersText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Reminders"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:layout_weight="1"/>

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@drawable/black_chevron_forward_24"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/budgetContainer"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true">

                            <ImageView
                                android:id="@+id/budgetIcon"
                                android:layout_width="29dp"
                                android:layout_height="29dp"
                                android:src="@drawable/budget"
                                android:background="@drawable/user_circle"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/budgetText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Budget"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:layout_weight="1"/>

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@drawable/black_chevron_forward_24"
                                android:layout_gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/exportContainer"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true">

                            <ImageView
                                android:id="@+id/exportIcon"
                                android:layout_width="29dp"
                                android:layout_height="29dp"
                                android:src="@drawable/export"
                                android:background="@drawable/user_circle"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/exportText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Export Data"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:layout_weight="1"/>

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@drawable/black_chevron_forward_24"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/PasswordContainer"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true">

                            <ImageView
                                android:id="@+id/PasswordIcon"
                                android:layout_width="29dp"
                                android:layout_height="29dp"
                                android:src="@drawable/lock"
                                android:background="@drawable/user_circle"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/PasswordText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Change Password"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:layout_weight="1"/>

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@drawable/black_chevron_forward_24"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/languageContainer"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true">

                            <ImageView
                                android:id="@+id/languageIcon"
                                android:layout_width="29dp"
                                android:layout_height="29dp"
                                android:src="@drawable/language"
                                android:background="@drawable/user_circle"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/languageText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Language"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:layout_weight="1"/>

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@drawable/black_chevron_forward_24"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/themesContainerr"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true">

                            <ImageView
                                android:id="@+id/themeIcon"
                                android:layout_width="29dp"
                                android:layout_height="29dp"
                                android:src="@drawable/themes"
                                android:background="@drawable/user_circle"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/themeText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Theme"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:layout_weight="1"/>

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@drawable/black_chevron_forward_24"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/fontContainer"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true">

                            <ImageView
                                android:id="@+id/fontIcon"
                                android:layout_width="29dp"
                                android:layout_height="29dp"
                                android:src="@drawable/fontsize"
                                android:background="@drawable/user_circle"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/fontText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Font Size"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:layout_weight="1"/>

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@drawable/black_chevron_forward_24"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/deleteContainer"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true">

                            <ImageView
                                android:id="@+id/deleteIcon"
                                android:layout_width="29dp"
                                android:layout_height="29dp"
                                android:src="@drawable/trash"
                                android:background="@drawable/user_circle"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/deleteText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Delete All Data"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:layout_weight="1"/>

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@drawable/black_chevron_forward_24"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <!-- Settings Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="385dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center">

                <!--    Bottom Menus Container-->
                <LinearLayout
                    android:id="@+id/bottomMenusContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="2dp"
                    android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/securityContainer"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true">

                            <ImageView
                                android:id="@+id/securityIcon"
                                android:layout_width="29dp"
                                android:layout_height="29dp"
                                android:src="@drawable/shield"
                                android:background="@drawable/user_circle"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/securityText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Privacy &amp; Policy"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:layout_weight="1"/>

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@drawable/black_chevron_forward_24"
                                android:layout_gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/termsContainer"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true">

                            <ImageView
                                android:id="@+id/termsIcon"
                                android:layout_width="29dp"
                                android:layout_height="29dp"
                                android:layout_gravity="center"
                                android:background="@drawable/user_circle"
                                android:src="@drawable/termsicon" />

                            <TextView
                                android:id="@+id/termsText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Terms of Use"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:layout_weight="1"/>

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@drawable/black_chevron_forward_24"
                                android:layout_gravity="center"/>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/aboutUsContainer"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true">

                            <ImageView
                                android:id="@+id/aboutIcon"
                                android:layout_width="24dp"
                                android:layout_height="29dp"
                                android:layout_gravity="center"
                                android:background="@drawable/user_circle"
                                android:src="@drawable/question" />

                            <TextView
                                android:id="@+id/aboutText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="About Us"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:layout_weight="1"/>

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@drawable/black_chevron_forward_24"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/feedBackContainer"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true">

                            <ImageView
                                android:id="@+id/feedBackIcon"
                                android:layout_width="29dp"
                                android:layout_height="29dp"
                                android:layout_gravity="center"
                                android:background="@drawable/user_circle"
                                android:src="@drawable/comment" />

                            <TextView
                                android:id="@+id/feedBackText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="FeedBack"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:layout_weight="1"/>

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@drawable/black_chevron_forward_24"
                                android:layout_gravity="center"/>
                        </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>